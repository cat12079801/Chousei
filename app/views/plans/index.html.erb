<p id="notice"><%= notice %></p>

<h1>Listing Plans</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= link_to plan_path(plan.original_url) do %><paper-fab icon="search" style="background-color: #1E88E5" mini></paper-fab><% end %></td>
        <td><%= link_to edit_plan_path(plan.original_url) do %><paper-fab icon="create" style="background-color: #43A047" mini></paper-fab><% end %></td>
        <td><%= link_to plan_path(plan.original_url), method: :delete, data: { confirm: 'Are you sure?' } do %><paper-fab icon="block" style="background-color: #E53935" mini></paper-fab><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_plan_path do%>
  <paper-button raised>New Plan</paper-button>
<% end %>
