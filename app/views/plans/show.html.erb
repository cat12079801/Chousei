<p id="notice"><%= notice %></p>

<h1><%= @plan.title %></h1>
<h3><%= @plan.explanation %></h3>

<table>
  <tr>
    <th>日程</th>
    <% if !@opinions.nil? %>
      <% for i in 0..@opinions.length - 1 do %>
        <th><%= @opinions[i].name %></th>
      <% end %>
    <% end %>
  </tr>
  <% for i in 0..@plan.day_number - 1 do %>
  <tr>
    <td><%= @plan.day_start + i %></td>
    <% if !@opinions.nil? %>
      <% for j in 0..@opinions.length - 1 do %>
        <td class="<%= @detail_opinions[j][(@plan.day_start + i).to_s] %>"></td>
      <% end %>
    <% end %>
  </tr>
  <% end %>
  <tr>
    <td></td>
    <% if !@opinions.nil? %>
      <% for j in 0..@opinions.length - 1 do %>
        <td><%= link_to "edit", edit_plan_opinion_path(@plan.original_url, @opinions[j]) %></td>
      <% end %>
    <% end %>
  </tr>
  <tr>
    <td></td>
    <% if !@opinions.nil? %>
      <% for j in 0..@opinions.length - 1 do %>
        <td><%= link_to "delete", plan_opinion_path(@plan.original_url, @opinions[j]), :method => :delete, data: {confirm: "ok?"} %></td>
      <% end %>
    <% end %>
  </tr>
</table>

<%= link_to edit_plan_path(@plan.original_url) do %><paper-button raised>Edit</paper-button><% end %>
<%= link_to plans_path do %><paper-button style="color: #455A64" raised>Back</paper-button><% end %>
<%= link_to new_plan_opinion_path(@plan.original_url) do %><paper-button style="color: #00796B" raised>New Opinion</paper-button><% end %>
